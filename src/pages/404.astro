---
import BaseLayout from '@layouts/BaseLayout.astro';
---

<BaseLayout title="404 · Page Not Found" description="The page you're looking for doesn't exist.">
  <main class="not-found">
    <div class="container">
      <div class="terminal-block">
        <div class="line">
          <span class="prompt">❯</span>
          <span class="cmd"> cat ./page</span>
        </div>
        <div class="line error">
          <span class="error-code">404</span>
          <span class="error-msg">: No such file or directory</span>
        </div>
        <div class="line blank"></div>
        <div class="line">
          <span class="prompt">❯</span>
          <span class="cmd"> echo "Page not found. Let's go back."</span>
        </div>
        <div class="line output">
          <span class="muted">Page not found. Let's go back.</span>
        </div>
        <div class="line blank"></div>
        <div class="line">
          <span class="prompt">❯</span>
          <span class="cmd"> cd <a href="/" class="home-link">~</a></span>
        </div>
      </div>

      <div class="actions">
        <a href="/" class="btn-primary">← Home</a>
        <a href="/blog" class="btn-secondary">Blog</a>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .not-found {
    padding: 6rem 1.5rem;
    min-height: calc(100vh - 52px);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .container {
    max-width: 560px;
    width: 100%;
  }

  .terminal-block {
    background: var(--color-bg-2);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 2rem 1.5rem;
    font-family: var(--font-mono);
    font-size: 0.9rem;
    line-height: 1.8;
  }

  .line {
    display: flex;
    align-items: center;
    gap: 0.4rem;
  }

  .blank { height: 0.6rem; }

  .prompt { color: var(--color-green); }
  .cmd    { color: var(--color-text); }
  .output { padding-left: 1.4rem; }
  .muted  { color: var(--color-text-muted); }

  .error {
    padding-left: 1.4rem;
    display: flex;
    align-items: baseline;
    gap: 0;
  }

  .error-code {
    font-size: 2.5rem;
    font-weight: 700;
    color: #f85149;
    line-height: 1;
  }

  .error-msg {
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  .home-link {
    color: var(--color-accent);
    text-decoration: none;
    border-bottom: 1px dashed var(--color-accent);
  }
  .home-link:hover { color: #fff; border-color: #fff; }

  .actions {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
    justify-content: center;
  }

  .btn-primary,
  .btn-secondary {
    font-family: var(--font-mono);
    font-size: 0.82rem;
    padding: 0.6rem 1.4rem;
    border-radius: 6px;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn-primary {
    background: var(--color-accent);
    color: var(--color-bg);
    font-weight: 600;
  }
  .btn-primary:hover { background: #fff; color: var(--color-bg); }

  .btn-secondary {
    border: 1px solid var(--color-border);
    color: var(--color-text-muted);
    background: transparent;
  }
  .btn-secondary:hover { border-color: var(--color-accent); color: var(--color-accent); }
</style>
