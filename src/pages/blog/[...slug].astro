---
import BaseLayout from '@layouts/BaseLayout.astro';
import ReadingProgress from '@components/ReadingProgress.astro';
import TableOfContents from '@components/TableOfContents.astro';
import Giscus from '@components/Giscus.astro';
import LangToggle from '@components/LangToggle.astro';
import { getCollection, getEntry, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);
  return posts.map(post => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

let authorData = null;
try {
  const entry = await getEntry('authors', post.data.author);
  if (entry) authorData = entry.data;
} catch {}

const siteUrl = 'https://njueeray.github.io';
const postUrl = `${siteUrl}/blog/${post.id}`;

// JSON-LD Article schema
const articleSchema = {
  '@context': 'https://schema.org',
  '@type': 'BlogPosting',
  headline: post.data.title,
  description: post.data.description,
  url: postUrl,
  datePublished: post.data.pubDate.toISOString(),
  ...(post.data.updatedDate ? { dateModified: post.data.updatedDate.toISOString() } : {}),
  author: {
    '@type': authorData?.isAgent ? 'SoftwareApplication' : 'Person',
    name: authorData?.displayName ?? 'Ray Huang',
    url: `${siteUrl}/blog/authors/${post.data.author}`,
  },
  publisher: {
    '@type': 'Person',
    name: 'Ray Huang',
    url: siteUrl,
  },
  keywords: post.data.tags?.join(', '),
  inLanguage: post.data.bilingual ? 'zh-CN' : 'en',
};

// hreflang for bilingual posts
const hreflangLinks = post.data.bilingual
  ? [
      { hreflang: 'zh', href: postUrl },
      { hreflang: 'en', href: postUrl },
      { hreflang: 'x-default', href: postUrl },
    ]
  : undefined;

// Related posts: up to 3 posts sharing most tags, excluding current
const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const currentTags = new Set(post.data.tags);
const relatedPosts = allPosts
  .filter(p => p.id !== post.id)
  .map(p => ({
    post: p,
    score: p.data.tags.filter(t => currentTags.has(t)).length,
  }))
  .filter(({ score }) => score > 0)
  .sort((a, b) => b.score - a.score || b.post.data.pubDate.valueOf() - a.post.data.pubDate.valueOf())
  .slice(0, 3)
  .map(({ post: p }) => p);
---

<BaseLayout
  title={`${post.data.title} ¬∑ Ray Huang`}
  description={post.data.description}
  jsonLd={articleSchema}
  hreflangLinks={hreflangLinks}
>
  <ReadingProgress />
  <article class="post">
    <div class="container">
      <div class="post-nav">
        <a href="/blog" class="back">
          <span class="arrow">‚Üê</span> back to blog
        </a>
      </div>

      <header class="post-header">
        <div class="post-meta">
          <time datetime={post.data.pubDate.toISOString()}>
            {post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
          </time>
          {post.data.updatedDate && (
            <span class="updated">
              (updated {post.data.updatedDate.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })})
            </span>
          )}
          {authorData && (
            <a href={`/blog/authors/${post.data.author}`} class="author-inline">
              {authorData.avatar && <span>{authorData.avatar}</span>}
              <span>{authorData.displayName}</span>
              {authorData.isAgent && <span class="agent-tag">AI Agent</span>}
            </a>
          )}
        </div>
        <h1 class="post-title">{post.data.title}</h1>
        <p class="post-desc">{post.data.description}</p>
        <div class="tags">
          {post.data.tags.map(tag => (
            <a href={`/blog/tags/${encodeURIComponent(tag)}`} class="tag">{tag}</a>
          ))}
          <a href="/blog/tags" class="tag tag-all">ÂÖ®ÈÉ®Ê†áÁ≠æ ‚Üí</a>
          {post.data.bilingual && <LangToggle />}
        </div>
      </header>

      <div class="post-content">
        <Content />
      </div>

      {authorData && (
        <aside class="author-card">
          <div class="author-card-avatar">{authorData.avatar ?? 'üë§'}</div>
          <div class="author-card-body">
            <div class="author-card-name-row">
              <a href={`/blog/authors/${post.data.author}`} class="author-card-name">
                {authorData.displayName}
              </a>
              {authorData.isAgent && <span class="agent-badge">AI Agent</span>}
            </div>
            <p class="author-card-role">{authorData.role}</p>
            <p class="author-card-bio">{authorData.bio}</p>
            <blockquote class="author-card-philosophy">"‚Äã{authorData.philosophy}"</blockquote>
          </div>
        </aside>
      )}

      {relatedPosts.length > 0 && (
        <section class="related-posts">
          <div class="related-title">
            <span class="prompt">‚ùØ</span> Áõ∏ÂÖ≥ÊñáÁ´†
          </div>
          <ul class="related-list">
            {relatedPosts.map(p => (
              <li class="related-item">
                <a href={`/blog/${p.id}`} class="related-link">
                  <span class="related-post-title">{p.data.title}</span>
                  <span class="related-meta">
                    <time datetime={p.data.pubDate.toISOString()}>
                      {p.data.pubDate.toLocaleDateString('zh-CN', { year: 'numeric', month: 'short', day: 'numeric' })}
                    </time>
                    <span class="related-tags">
                      {p.data.tags.filter(t => currentTags.has(t)).slice(0, 2).map(t => (
                        <span class="related-tag">{t}</span>
                      ))}
                    </span>
                  </span>
                </a>
              </li>
            ))}
          </ul>
        </section>
      )}

      <Giscus />
    </div>
  </article>
  <TableOfContents />
</BaseLayout>

<style>
  .post { padding: 3rem 1.5rem; min-height: calc(100vh - 52px); }
  .container { max-width: 700px; margin: 0 auto; }

  .post-nav { margin-bottom: 2rem; }
  .back {
    font-family: var(--font-mono);
    font-size: 0.82rem;
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color 0.2s;
  }
  .back:hover { color: var(--color-accent); }
  .arrow { margin-right: 0.3rem; }

  .post-header { margin-bottom: 2.5rem; padding-bottom: 1.5rem; border-bottom: 1px solid var(--color-border); }

  .post-meta {
    font-family: var(--font-mono);
    font-size: 0.78rem;
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }
  .updated { font-style: italic; }

  .author-inline {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.73rem;
    color: var(--color-text-muted);
    text-decoration: none;
    border: 1px solid var(--color-border);
    border-radius: 20px;
    padding: 0.05rem 0.5rem;
    transition: color 0.15s, border-color 0.15s;
  }
  .author-inline:hover { color: var(--color-accent); border-color: var(--color-accent); }
  .agent-tag {
    font-size: 0.62rem;
    border: 1px solid var(--color-accent);
    border-radius: 20px;
    padding: 0.02rem 0.35rem;
    color: var(--color-accent);
    background: rgba(88, 166, 255, 0.08);
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  /* ===== Author Card ===== */
  .author-card {
    display: flex;
    gap: 1.25rem;
    align-items: flex-start;
    margin: 2.5rem 0;
    padding: 1.5rem;
    background: var(--color-bg-2);
    border: 1px solid var(--color-border);
    border-radius: 10px;
  }
  .author-card-avatar { font-size: 2.5rem; line-height: 1; flex-shrink: 0; }
  .author-card-body { flex: 1; min-width: 0; }
  .author-card-name-row {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.2rem;
    flex-wrap: wrap;
  }
  .author-card-name {
    font-size: 1rem;
    font-weight: 700;
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s;
  }
  .author-card-name:hover { color: var(--color-accent); }
  .agent-badge {
    font-family: var(--font-mono);
    font-size: 0.62rem;
    padding: 0.08rem 0.45rem;
    border: 1px solid var(--color-accent);
    border-radius: 20px;
    color: var(--color-accent);
    background: rgba(88, 166, 255, 0.08);
    letter-spacing: 0.04em;
    text-transform: uppercase;
  }
  .author-card-role {
    font-family: var(--font-mono);
    font-size: 0.73rem;
    color: var(--color-accent);
    margin: 0 0 0.45rem;
  }
  .author-card-bio {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin: 0 0 0.6rem;
  }
  .author-card-philosophy {
    font-size: 0.82rem;
    color: var(--color-text-muted);
    font-style: italic;
    border-left: 2px solid var(--color-accent);
    padding: 0.35rem 0.75rem;
    margin: 0;
    background: rgba(88, 166, 255, 0.04);
    border-radius: 0 4px 4px 0;
  }

  @media (max-width: 540px) {
    .author-card { flex-direction: column; gap: 0.75rem; }
  }

  .post-title {
    font-size: 1.7rem;
    font-weight: 700;
    color: var(--color-text);
    line-height: 1.3;
    margin-bottom: 0.75rem;
  }

  .post-desc {
    font-size: 0.95rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .tags { display: flex; flex-wrap: wrap; gap: 0.35rem; }
  .tag {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    background: var(--color-bg-3);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    padding: 0.15rem 0.5rem;
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color 0.15s, border-color 0.15s;
  }
  .tag:hover { color: var(--color-accent); border-color: var(--color-accent); }
  .tag-all { color: var(--color-text-muted); opacity: 0.7; }

  /* ===== Article Prose Styles ===== */
  .post-content { line-height: 1.8; }

  .post-content :global(h2) {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 2rem 0 0.75rem;
    padding-bottom: 0.4rem;
    border-bottom: 1px solid var(--color-border);
  }

  .post-content :global(h3) {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-accent);
    margin: 1.5rem 0 0.5rem;
  }

  .post-content :global(p) {
    color: var(--color-text);
    margin-bottom: 1rem;
    font-size: 0.95rem;
  }

  .post-content :global(a) { color: var(--color-accent); text-decoration: underline; }
  .post-content :global(a:hover) { color: #fff; }

  .post-content :global(code) {
    font-family: var(--font-mono);
    font-size: 0.83em;
    background: var(--color-bg-3);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    padding: 0.1em 0.4em;
    color: var(--color-accent);
  }

  .post-content :global(pre) {
    background: var(--color-bg-2) !important;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 1.25rem;
    overflow-x: auto;
    margin: 1.25rem 0;
  }
  .post-content :global(pre code) {
    background: none;
    border: none;
    padding: 0;
    color: var(--color-text);
    font-size: 0.85rem;
  }

  .post-content :global(blockquote) {
    border-left: 3px solid var(--color-accent);
    padding: 0.6rem 1rem;
    margin: 1.25rem 0;
    background: rgba(88, 166, 255, 0.05);
    border-radius: 0 6px 6px 0;
  }
  .post-content :global(blockquote p) { color: var(--color-text-muted); margin: 0; font-style: italic; }

  .post-content :global(ul),
  .post-content :global(ol) {
    padding-left: 1.5rem;
    margin: 0.75rem 0 1rem;
  }
  .post-content :global(li) { color: var(--color-text); font-size: 0.95rem; margin-bottom: 0.35rem; }

  .post-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.25rem 0;
    font-size: 0.88rem;
  }
  .post-content :global(th),
  .post-content :global(td) {
    padding: 0.6rem 0.9rem;
    border: 1px solid var(--color-border);
    text-align: left;
  }
  .post-content :global(th) {
    background: var(--color-bg-3);
    color: var(--color-text);
    font-family: var(--font-mono);
    font-size: 0.78rem;
  }
  .post-content :global(td) { color: var(--color-text-muted); }

  .post-content :global(hr) {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: 2rem 0;
  }

  /* ===== Related Posts ===== */
  .related-posts {
    margin: 2.5rem 0;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }
  .related-title {
    font-family: var(--font-mono);
    font-size: 0.78rem;
    color: var(--color-text-muted);
    margin-bottom: 0.9rem;
    letter-spacing: 0.03em;
  }
  .related-title .prompt { color: var(--color-accent); margin-right: 0.4rem; }
  .related-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  .related-item { display: block; }
  .related-link {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 1rem;
    padding: 0.65rem 0.9rem;
    border: 1px solid var(--color-border);
    border-radius: 7px;
    text-decoration: none;
    transition: border-color 0.15s, background 0.15s;
    background: var(--color-bg-2);
  }
  .related-link:hover {
    border-color: var(--color-accent);
    background: rgba(88, 166, 255, 0.04);
  }
  .related-post-title {
    font-size: 0.88rem;
    color: var(--color-text);
    font-weight: 500;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    flex: 1;
  }
  .related-link:hover .related-post-title { color: var(--color-accent); }
  .related-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-shrink: 0;
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--color-text-muted);
  }
  .related-tags { display: flex; gap: 0.3rem; }
  .related-tag {
    padding: 0.1rem 0.45rem;
    border-radius: 20px;
    background: rgba(88,166,255,0.08);
    border: 1px solid rgba(88,166,255,0.2);
    color: var(--color-accent);
    font-size: 0.65rem;
  }
  @media (max-width: 600px) {
    .related-meta { display: none; }
    .related-link { padding: 0.55rem 0.75rem; }
  }
</style>
