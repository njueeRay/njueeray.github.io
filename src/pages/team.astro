---
// /team — 团队进化时间线
// Git Graph 风格可视化 AI-native 团队的成长历程
import BaseLayout from '@layouts/BaseLayout.astro';
import GitTimeline from '@components/GitTimeline.astro';
import { playbookVersions, teamMembers } from '../data/team-evolution';
import { getCollection } from 'astro:content';

// 构建每个作者的最新博文映射
const allPosts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const latestPost = new Map<string, { title: string; slug: string }>();
for (const post of allPosts) {
  const aid = post.data.author;
  if (!latestPost.has(aid)) latestPost.set(aid, { title: post.data.title, slug: post.slug });
}
---

<BaseLayout
  title="Team Evolution · AI-Native 团队成长之路"
  description="一个 AI-native 团队从诞生到成熟的完整时间线 — 每一个节点都是认知系统进化的里程碑。"
>
  <main class="team-page">
    <div class="container">

      {/* ─── Hero ─── */}
      <header class="hero">
        <div class="hero-prompt">
          <span class="prompt">❯</span>
          <span class="cmd"> git log --graph --all --oneline</span>
          <span class="cursor">█</span>
        </div>
        <h1 class="hero-title">Team Evolution</h1>
        <p class="hero-subtitle">
          AI-Native 团队成长之路 — 每一个节点都是认知系统进化的里程碑
        </p>
        <div class="hero-legend">
          <span class="legend-item"><span class="legend-dot" style="--dot: #58a6ff;"></span>Release</span>
          <span class="legend-item"><span class="legend-dot" style="--dot: #3fb950;"></span>Team</span>
          <span class="legend-item"><span class="legend-dot" style="--dot: #e3b341;"></span>Playbook</span>
          <span class="legend-item"><span class="legend-dot" style="--dot: #f778ba;"></span>Feature</span>
          <span class="legend-item"><span class="legend-dot" style="--dot: #bc8cff;"></span>Milestone</span>
        </div>
      </header>

      {/* ─── Git Graph Timeline ─── */}
      <GitTimeline />

      {/* ─── Playbook 迭代档案 ─── */}
      <section class="playbook-archive" id="playbook">
        <h2 class="section-title">
          <span class="prompt">❯</span>
          <span class="cmd"> cat playbook/CHANGELOG.md</span>
        </h2>
        <p class="section-desc">
          Playbook 是团队协作认知的物理载体 — 每一次迭代都代表方法论的进化
        </p>

        <div class="pb-versions">
          {playbookVersions.map((pb) => (
            <details class="pb-card">
              <summary class="pb-summary">
                <span class="pb-version">{pb.version}</span>
                <span class="pb-subtitle">{pb.subtitle}</span>
                <time class="pb-date">{pb.date}</time>
              </summary>
              <ul class="pb-highlights">
                {pb.highlights.map((h) => (
                  <li>{h}</li>
                ))}
              </ul>
            </details>
          ))}
        </div>
      </section>

      {/* ─── 团队成员 ─── */}
      <section class="team-members" id="members">
        <h2 class="section-title">
          <span class="prompt">❯</span>
          <span class="cmd"> ls team/ --format=grid</span>
        </h2>
        <p class="section-desc">
          {teamMembers.filter(m => m.isAgent).length} AI Agents + 1 Human — 能力 = 人类判断力 × AI 执行力
        </p>

        <div class="members-grid">
          {teamMembers.map((member) => {
            const lp = latestPost.get(member.id);
            return (
              <a
                href={`/blog/authors/${member.id}`}
                class:list={['member-card', member.isAgent && 'is-agent']}
              >
                <div class="member-card-top">
                  <div class="member-avatar">{member.emoji}</div>
                  <div class="member-info">
                    <span class="member-name">{member.displayName}</span>
                    <span class="member-role">{member.role}</span>
                  </div>
                  {member.isAgent && <span class="agent-dot" title="AI Agent">●</span>}
                </div>
                <div class="member-latest">
                  {lp
                    ? <span class="latest-title">→ {lp.title}</span>
                    : <span class="latest-none">暂无文章</span>
                  }
                </div>
              </a>
            );
          })}
        </div>
      </section>

      {/* ─── Footer CTA ─── */}
      <section class="team-footer">
        <p class="footer-line">
          <span class="muted">这个页面本身就是 AI-native 团队协作能力的证明 —</span>
          <a href="https://github.com/njueeRay/OpenProfile" target="_blank" rel="noopener">
            查看开源工作流 →
          </a>
        </p>
      </section>

    </div>
  </main>
</BaseLayout>

<style>
  /* ─── Page Container ─── */
  .team-page {
    padding-top: 80px;
    padding-bottom: 2rem;
  }

  .container {
    max-width: 820px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* ─── Hero ─── */
  .hero {
    text-align: center;
    margin-bottom: 3.5rem;
  }

  .hero-prompt {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--color-text);
    margin-bottom: 1.2rem;
  }

  .hero-prompt .prompt {
    color: var(--color-green);
  }

  .hero-prompt .cmd {
    color: var(--color-text-muted);
  }

  .hero-prompt .cursor {
    color: var(--color-accent);
    animation: blink 1.2s step-end infinite;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  .hero-title {
    font-family: var(--font-mono);
    font-size: 2.2rem;
    font-weight: 800;
    color: var(--color-text);
    margin: 0 0 0.6rem;
    letter-spacing: -0.02em;
    background: linear-gradient(135deg, var(--color-accent), #bc8cff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 0.92rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin: 0 0 1.5rem;
  }

  /* Legend */
  .hero-legend {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .legend-item {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    font-family: var(--font-mono);
    font-size: 0.72rem;
    color: var(--color-text-muted);
  }

  .legend-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--dot);
    box-shadow: 0 0 6px var(--dot);
  }

  /* ─── Section Titles ─── */
  .section-title {
    font-family: var(--font-mono);
    font-size: 0.92rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 4rem 0 0.5rem;
  }

  .section-title .prompt {
    color: var(--color-green);
  }

  .section-title .cmd {
    color: var(--color-text-muted);
    font-weight: 400;
  }

  .section-desc {
    font-size: 0.82rem;
    color: var(--color-text-muted);
    margin: 0 0 1.5rem;
    line-height: 1.5;
  }

  /* ─── Playbook Archive ─── */
  .pb-versions {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .pb-card {
    background: var(--color-bg-2);
    border: 1px solid var(--color-border);
    border-left: 3px solid #e3b341;
    border-radius: 8px;
    overflow: hidden;
    transition: border-color 0.2s;
  }

  .pb-card[open] {
    border-color: #e3b341;
  }

  .pb-summary {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    padding: 0.85rem 1.1rem;
    cursor: pointer;
    list-style: none;
    font-family: var(--font-mono);
    transition: background 0.2s;
  }

  .pb-summary::-webkit-details-marker {
    display: none;
  }

  .pb-summary::before {
    content: '▸';
    color: var(--color-text-muted);
    font-size: 0.8rem;
    transition: transform 0.2s;
  }

  .pb-card[open] .pb-summary::before {
    transform: rotate(90deg);
  }

  .pb-summary:hover {
    background: var(--color-bg-3);
  }

  .pb-version {
    font-weight: 700;
    font-size: 0.82rem;
    color: #e3b341;
    background: rgba(227, 179, 65, 0.1);
    border: 1px solid rgba(227, 179, 65, 0.3);
    border-radius: 4px;
    padding: 1px 8px;
  }

  .pb-subtitle {
    flex: 1;
    font-size: 0.82rem;
    color: var(--color-text);
  }

  .pb-date {
    font-size: 0.72rem;
    color: var(--color-text-muted);
  }

  .pb-highlights {
    padding: 0 1.1rem 1rem 2.5rem;
    margin: 0;
    list-style: none;
  }

  .pb-highlights li {
    position: relative;
    font-size: 0.8rem;
    color: var(--color-text-muted);
    line-height: 1.7;
    padding-left: 1rem;
  }

  .pb-highlights li::before {
    content: '·';
    position: absolute;
    left: 0;
    color: #e3b341;
    font-weight: bold;
  }

  /* ─── Team Members ─── */
  .members-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 0.75rem;
  }

  .member-card {
    display: flex;
    flex-direction: column;
    gap: 0;
    padding: 0;
    background: var(--color-bg-2);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    text-decoration: none;
    overflow: hidden;
    transition: border-color 0.2s, box-shadow 0.2s, transform 0.2s;
  }

  .member-card-top {
    display: flex;
    align-items: center;
    gap: 0.65rem;
    padding: 0.75rem 1rem;
  }

  .member-card:hover {
    border-color: var(--color-accent);
    box-shadow: 0 0 16px rgba(88, 166, 255, 0.1);
    transform: translateY(-2px);
  }

  .member-avatar {
    font-size: 1.5rem;
    flex-shrink: 0;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg-3);
    border-radius: 50%;
  }

  .member-info {
    display: flex;
    flex-direction: column;
    gap: 0.1rem;
    flex: 1;
    min-width: 0;
  }

  .member-name {
    font-family: var(--font-mono);
    font-size: 0.82rem;
    font-weight: 600;
    color: var(--color-text);
  }

  .member-role {
    font-size: 0.72rem;
    color: var(--color-text-muted);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .agent-dot {
    color: var(--color-green);
    font-size: 0.6rem;
    flex-shrink: 0;
  }

  .member-latest {
    border-top: 1px solid var(--color-border);
    padding: 0.45rem 1rem;
    font-family: var(--font-mono);
    font-size: 0.68rem;
    line-height: 1.4;
  }

  .latest-title {
    color: var(--color-text-muted);
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    transition: color 0.15s;
  }

  .member-card:hover .latest-title {
    color: var(--color-accent);
  }

  .latest-none {
    color: var(--color-border);
    font-style: italic;
  }

  /* ─── Footer CTA ─── */
  .team-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
    text-align: center;
  }

  .footer-line {
    font-size: 0.82rem;
    line-height: 1.6;
  }

  .muted {
    color: var(--color-text-muted);
  }

  .footer-line a {
    color: var(--color-accent);
    text-decoration: none;
  }

  .footer-line a:hover {
    text-decoration: underline;
  }

  /* ─── 响应式 ─── */
  @media (max-width: 600px) {
    .hero-title {
      font-size: 1.6rem;
    }

    .hero-legend {
      gap: 0.6rem;
    }

    .members-grid {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-size: 0.82rem;
    }
  }
</style>
