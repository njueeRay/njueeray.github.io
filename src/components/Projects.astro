// Featured projects section â€” update this list as projects grow
const projects = [
  {
    name: "OpenProfile",
    desc: "Build your GitHub profile with an AI Agent team â€” designer, writer, researcher, reviewer in one workflow.",
    url: "https://github.com/njueeRay/OpenProfile",
    tags: ["AI-Native", "GitHub Copilot", "Open Source"],
  },
  {
    name: "wechat_article_exporter",
    desc: "Export WeChat public account articles to structured formats â€” built for knowledge archiving and RAG pipelines.",
    url: "https://github.com/njueeRay/wechat_article_exporter",
    tags: ["Python", "RAG", "Knowledge Engineering"],
  },
  {
    name: "MediaCrawler",
    desc: "Multi-platform social media scraper for Xiaohongshu, Douyin, Weibo â€” data pipeline for LLM training & analysis.",
    url: "https://github.com/njueeRay/MediaCrawler",
    tags: ["Python", "Web Scraping", "LLM Data", "fork"],
  },
];
---

<section class="projects" id="projects">
  <div class="container">
    <h2 class="section-title"><span class="prompt">$</span> ls projects/ --sort=stars</h2>
    <div class="grid">
      {projects.map(p => (
        <a href={p.url} target="_blank" rel="noopener" class="card">
          <div class="card-header">
            <span class="repo-icon">ðŸ“¦</span>
            <span class="name">{p.name}</span>
          </div>
          <p class="desc">{p.desc}</p>
          <div class="tags">
            {p.tags.map(t => <span class={`tag${t === 'fork' ? ' fork' : ''}`}>{t}</span>)}
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .projects { padding: 4rem 1.5rem; border-top: 1px solid var(--color-border); }
  .container { max-width: 780px; margin: 0 auto; }
  .section-title {
    font-family: var(--font-mono);
    font-size: 1rem;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
  }
  .section-title .prompt { color: var(--color-green); margin-right: 0.3rem; }

  .grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 1rem; }
  .card {
    background: var(--color-bg-2);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 1.2rem;
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
    transition: border-color 0.2s, transform 0.2s;
  }
  .card:hover { border-color: var(--color-accent); transform: translateY(-2px); color: inherit; }

  .card-header { display: flex; align-items: center; gap: 0.6rem; }
  .repo-icon { font-size: 1rem; }
  .name { font-family: var(--font-mono); font-weight: 700; color: var(--color-accent); font-size: 0.95rem; }
  .desc { color: var(--color-text-muted); font-size: 0.85rem; line-height: 1.5; flex: 1; }
  .tags { display: flex; flex-wrap: wrap; gap: 0.3rem; }
  .tag {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    background: var(--color-bg-3);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    padding: 0.1rem 0.5rem;
    color: var(--color-text-muted);
  }
  .tag.fork {
    border-color: var(--color-yellow);
    color: var(--color-yellow);
    background: rgba(227, 179, 65, 0.08);
  }
</style>
